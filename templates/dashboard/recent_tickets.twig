{# templates/dashboard/RecentTicketsTable.twig #}

<div>
  <h3 class="text-lg font-semibold text-gray-700 mb-3">Recent Tickets</h3>

  {% if tickets|length > 0 %}
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-100">
          <tr>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Title</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Status</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Priority</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-700">Created</th>
            <th class="px-4 py-3 text-center text-sm font-medium text-gray-700">Actions</th>
          </tr>
        </thead>

        <tbody class="bg-white divide-y divide-gray-200">
          {% for ticket in tickets %}
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3 text-gray-800 font-medium">{{ ticket.title }}</td>
              <td class="px-4 py-3">
                {% set statusClass = '' %}
                {% if ticket.status == 'open' %}
                  {% set statusClass = 'bg-green-100 text-green-700' %}
                {% elseif ticket.status == 'in_progress' %}
                  {% set statusClass = 'bg-amber-100 text-amber-700' %}
                {% elseif ticket.status == 'closed' %}
                  {% set statusClass = 'bg-gray-100 text-gray-700' %}
                {% endif %}
                <span class="px-2 py-1 rounded-full text-xs font-semibold capitalize {{ statusClass }}">
                  {{ ticket.status }}
                </span>
              </td>
              <td class="px-4 py-3 capitalize">{{ ticket.priority|default('normal') }}</td>
              <td class="px-4 py-3 text-sm text-gray-500">{{ ticket.createdAt|date('m/d/Y') }}</td>
              <td class="px-4 py-3 text-center flex justify-center gap-2">
                <button
                  onclick="editTicket({{ ticket|json_encode|raw }})"
                class=" border text-amber-400 px-3 py-1 rounded-md hover:bg-yellow-500 hover:text-white transition"
                >
                  Update
                </button>
                <button
                  onclick="deleteTicket({{ ticket.id }})"
                  class="bg-red-400 text-white px-3 py-1 rounded-md hover:bg-red-500 transition"
                >
                  Delete
                </button>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% else %}
    <p class="text-gray-500 text-sm">No recent tickets found.</p>
  {% endif %}
</div>